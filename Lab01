class Solution {
public:
    bool isMonotonic(vector<int>& nums) {
        if (nums.size() < 2) 
            return true;  
        
        bool up = true,down = true; 
        
        for (int i = 0; i < nums.size() - 1; i++) {
            if (nums[i] > nums[i+1])  
                up = false;
            if (nums[i] < nums[i+1])  
                down = false;
        }
        if(up == false && down == false)
            return false;
        else
            return true;
    }
};
